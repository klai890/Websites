doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/style.css')
  link(rel='stylesheet' href='css/create-poll.css')
  title Create a Poll
nav
  a.brand(href='/') Polar
  a(href='/browse') Browse Polls
  a(href='/account') My Account
form#create-form.content.create-form(method='post' action='/addpoll')
  h3.section-title Settings
  input(type='text' name='title' placeholder='Poll Title')
  textarea(type='text' name='description' placeholder='Poll Description')
  .heading
    h3.section-title Options
    .btn.add-btn
      .plus-btn
        .line.line1
        .line.line2
  .options
    input.option(type='text' placeholder='Option 1' name='options')
    input.option(type='text' placeholder='Option 2' name='options')
  input.btn(type='submit')
a.wrapper(href='/create-poll')
  .plus-btn
    .line.line1
    .line.line2
