doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/style.css')
  link(rel='stylesheet' href='css/browse.css')
  title New Polls
nav
  a.brand(href='/') Polar
  a(href='/browse') Browse Polls
  a(href='/account') My Account
section.content
  .search-head
    form(action='/search' method='POST')
      input#searchbar.searchbar(type='text' placeholder='Search' name='query')
    img.search-after(src='https://image.flaticon.com/icons/svg/622/622669.svg' alt='')
    .border-between
    img#x.search-after(src='https://image.flaticon.com/icons/svg/1828/1828778.svg' alt='')
  .polls
    if rows.length === 0
      h1 No matches found for "#{query}"
    each row in rows
      .poll(id= row._id)
        h3.poll-title #{row.title}
        each opt in row.options
          form.options(action='/vote' method='post')
            button.option(value= opt name= row._id)= opt

        p.poll-description= row.description
        p.poll-description Creator: #{row.creator}
        //p.poll-description Votes: #{row.voters.length}
a.wrapper(href='create-poll')
  .plus-btn
    .line.line1
    .line.line2
